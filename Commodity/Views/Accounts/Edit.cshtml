@model Commodity.Models.Account

@{
    ViewData["Title"] = "Edit";
}
<link href="~/css/styleCom.css" rel="stylesheet">

<hr />
<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h4>Edit Profile</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="AccountID" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="FullName" class="form-control" id="floatingText" />
                                    <label for="floatingText">Full Name</label>
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Email" class="form-control" id="floatingAddress" readonly />
                                    <label class="control-label" for="floatingAddress">Email</label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 form-floating">
                                <select asp-for="Gender" class="form-control" id="floatingSelect">
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Phone" class="form-control" id="floatingAddress" readonly />
                                    <label class="control-label" for="floatingAddress">Phone</label>
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Password" class="form-control pr-5" id="floatingPassword" type="password" value="@TempData["Password"]"/>
                                    <label for="floatingPassword">Password</label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <i class="toggle-password fas fa-eye-slash position-absolute end-0 top-50 translate-middle-y" data-target="floatingPassword"></i>
                                </div>
                            </div>
                             <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Birth" class="form-control" id="floatingAddress" />
                                    <label class="control-label" for="floatingAddress">Birth</label>
                                    <span asp-validation-for="Birth" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="ConfirmPassword" class="form-control pr-5" id="floatingConfirmPassword" type="password" value="@TempData["Password"]" />
                                    <label for="floatingConfirmPassword">Confirm Password</label>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    <i class="toggle-password fas fa-eye-slash position-absolute end-0 top-50 translate-middle-y" data-target="floatingConfirmPassword"></i>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Address" class="form-control" id="floatingAddress" />
                                    <label class="control-label" for="floatingAddress">Address</label>
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="LastLogin" class="form-control" for="floatingAddress" readonly />
                                    <label class="control-label" for="floatingAddress">LastLogin</label>
                                    <span asp-validation-for="LastLogin" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="CreateDate" class="form-control" id="floatingAddress" readonly />
                                    <label class="control-label" for="floatingAddress">CreateDate</label>
                                    <span asp-validation-for="CreateDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-6 mx-auto">
            <div class="form-group">
                <a asp-action="Details" asp-route-id="@Model.AccountID" class="btn btn-secondary btn-block">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script src="~/js/togglePassword.js"></script>
