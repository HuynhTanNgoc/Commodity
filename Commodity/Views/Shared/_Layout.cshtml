<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Commodity</title>

    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/styleCom.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
</head>
<body>
    <header>
        <div class="sidebar pe-4 pb-3">
            <nav class="navbar bg-light navbar-light">
                <div class="d-flex align-items-center ms-4 mb-4">
                    <div class="position-relative">
                        <div class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"></div>
                    </div>
                </div>
                <div class="navbar-nav w-150">
                     <a href="https://localhost:7042/Products/Index" class="nav-item nav-link"><i class="fa fa-cubes me-2"></i>Product</a>
                   @*  <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fas fa-sync-alt"></i>Import-Export</a>
                        <div class="dropdown-menu bg-transparent border-0">
                            <a href="https://localhost:7042/ImportOrders/Index" class="nav-item nav-link"><i class="fas fa-file-import me-2"></i>Import</a>
                            <a href="https://localhost:7042/Products/Index" class="nav-item nav-link"><i class="fas fa-file-export me-2"></i>Export</a>
                        </div>
                    </div> *@
                    @* <a href="https://localhost:7042/Suppliers/Index" class="nav-item nav-link"><i class="fas fa-industry me-2"></i>Supplier</a> *@
                    <a href="https://localhost:7042/Accounts/Index" class="nav-item nav-link"> <i class="fas fa-user-lock me-2"></i> Account </a>
                    <a href="https://localhost:7042/Accounts/SignIn" class="nav-item nav-link"><i class="fas fa-sign-out-alt"></i> Sign Out</a>
                </div>
            </nav>
        </div>
    </header>

    <div class="container" style="flex: 1;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-auto">
        <div class="container">
            &copy; 2024 - Commodity - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

